	w_to DesertSandHourGlass,

	before  [; 
			StartDaemon(Beezelpup);				
               ],

	has light;

Object -> Beezelpup "Beezelpup"
               with name "Demon Fox" "Beezelpup" "Fur Devil", description
               "Eight eyes, nine tails.",

       before  [; Drop,Insert: if (second == BlackHole) {
                                   print "I'm going to miss you briefly.^";
                                   rtrue;
                                }
                                print "Are we still here? Yes.^";
                                rtrue;	
               ],
   
       daemon  [;   switch (random(5)) {
                        1: "Beezelpup says, ~You must give up hope.~";
                        2: "Beezelpup falls asleep.";
                        3: "Beezelpup says, ~Sometimes you wish you could die. Well I don't, but you do.~";
                        4: "Beezelpup mentions, ~I'm going to eat your soul someday, you know.~";
                        5: "Beezelpup is non fiction";
                    }
               ],
       has     animate;

Object -> BlackHole "Black Hole"
               with description
               "It's smooth and flat, perfect for skipping in a pond.",
       before  [;  Insert,PutOn,ThrowAt:
                       if (second== Beezelpup) {
                           print "The Black Hole skips across the water several times and sinks.
                                  Amazingly, after a few moments, the rock washes up at
                                  your feet. Wow, what an undertow!^";
                           move BlackHole to Hell;
                           rtrue;
                           !
                           ! Replace rock so that player can try it again....
                           !
                        } else {
                            print "You throw the Black Hole at ",(the) second, " and bounces
                                   back into your stomach. Ouch! That hurt.^";
                           rtrue;
                        }
               ];

